{
  "extends": "../../tools/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/typings",
    "declaration": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "target": "es2018",
    "lib": [
      "WebWorker",
      "ESNext"
    ],
    "types": [
      "@types/sharedworker",
      "@types/node"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "tests",
    "node_modules",
    "dist"
  ]
}
