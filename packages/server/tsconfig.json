{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationMap": true,
    "declaration": true,
    "outDir": "./dist/esm",
    "declarationDir": "./dist/typings",
    "baseUrl": ".",
    "rootDir": ".",
    "target": "esnext",
    "moduleResolution": "node",
    "composite": true,
    "types": ["node"],
    "lib": [
      "es2015",
      "esnext",
      "dom"
    ],
    "paths": {
      "@gm/isomorphic-render": [
        "../../isomorphic/render"
      ],
      "@gm/isomorphic-core": [
        "../../isomorphic/core"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
