{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2018",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./",
    "outDir": "./dist/esm",
    "types": [],
    "declarationDir": "./dist/typings",
    "noEmitOnError": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "../node",
    "../node_modules",
    "../dist",
    "dist"
  ]
}
